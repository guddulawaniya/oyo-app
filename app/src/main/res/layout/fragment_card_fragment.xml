<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheetbg"
    android:paddingBottom="30dp"
    tools:context=".Card_fragment">


    <ImageView
        android:id="@+id/Cardfragmentcloseicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/closeicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView112"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cardfragmentcloseicon"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/textView112"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay with a new card"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                tools:src="@drawable/rupyecard" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                tools:src="@drawable/rupyecard" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                tools:src="@drawable/rupyecard" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                tools:src="@drawable/rupyecard" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/cardtextfieldbg"
            android:hint="Card number"
            android:paddingStart="10dp"
            android:scrollbarSize="16dp"
            android:textColor="#3C3A3A"
            android:textColorHint="#DCD1D1"
            android:textSize="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>